<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:comp/env/${datasource.jndi.name}" />
	</bean>
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:/${module.package.location}/mybatis-config.xml" />
		<property name="configurationProperties">
			<props>
				<prop key="mapUnderscoreToCamelCase">true</prop>
				<prop key="logImpl">SLF4J</prop>
				<prop key="cacheEnabled">${ibatis.cacheEnabled}</prop>
				<prop key="lazyLoadingEnabled">${ibatis.lazyLoadingEnabled}</prop>
				<prop key="defaultExecutorType">${ibatis.defaultExecutorType}</prop>
				<prop key="aggressiveLazyLoading">${ibatis.aggressiveLazyLoading}</prop>
				<prop key="defaultStatementTimeout">${ibatis.defaultStatementTimeout}</prop>
				<!-- should not change -->
				<prop key="multipleResultSetsEnabled">${ibatis.multipleResultSetsEnabled}</prop>
				<prop key="useColumnLabel">${ibatis.useColumnLabel}</prop>
				<prop key="useGeneratedKeys">${ibatis.useGeneratedKeys}</prop>
				<prop key="autoMappingBehavior">${ibatis.autoMappingBehavior}</prop>
				<prop key="safeRowBoundsEnabled">${ibatis.safeRowBoundsEnabled}</prop>
			</props>
		</property>
	</bean>

	<bean id="template" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSessionFactory" />
		<constructor-arg index="1" value="${ibatis.template}" /><!-- internal default BATCH -->
	</bean>
	<bean id="batchTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSessionFactory" />
		<constructor-arg index="1" value="${ibatis.template.batch}" /><!-- internal default BATCH -->
	</bean>

	<bean id="dao" class="net.butfly.albacore.dao.DAOBase" abstract="true" parent="bizUnit" />
	<bean id="entityDAO" class="net.butfly.albacore.dao.EntityDAOBase" abstract="true" parent="dao">
		<property name="template" ref="template" />
		<property name="batchTemplate" ref="batchTemplate" />
	</bean>
</beans>
