<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation"
			value="classpath:/${project.package}/mybatis-config.xml" />
	</bean>

	<bean id="template" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSessionFactory" />
		<constructor-arg index="1" value="${ibatis.template}" />
	</bean>
	<bean id="batchTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSessionFactory" />
		<constructor-arg index="1" value="${ibatis.template.batch}" />
	</bean>

	<bean id="dao" class="net.butfly.albacore.dao.DAOBase" abstract="true" parent="dao" />
	<bean id="entityDAO" class="net.butfly.albacore.dao.EntityDAOBase" abstract="true" parent="dao">
		<property name="template" ref="template" />
		<property name="batchTemplate" ref="batchTemplate" />
	</bean>
	<bean id="logicalDAO" class="net.butfly.albacore.dao.LogicalDAOBase" abstract="true" parent="dao">
		<property name="template" ref="template" />
		<property name="batchTemplate" ref="batchTemplate" />
	</bean>
</beans>
