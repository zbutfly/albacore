<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
	<appender name="log-console-stdout" class="net.butfly.albacore.utils.logger.ANSIConsoleAppender">
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %-5.5p [%.15t] %-30.30c{1.} - %m%n" />
		</layout>
	</appender>
	<logger name="org.apache" additivity="false">
		<level value="warn" />
		<appender-ref ref="log-console-stdout" />
	</logger>
	<logger name="kafka" additivity="false">
		<level value="warn" />
		<appender-ref ref="log-console-stdout" />
	</logger>
	<logger name="com.leansoft.bigqueue" additivity="false">
		<level value="warn" />
		<appender-ref ref="log-console-stdout" />
	</logger>
	<logger name="net.butfly" additivity="false">
		<level value="debug" />
		<appender-ref ref="log-console-stdout" />
	</logger>
	<logger name="com.hzcominfo" additivity="false">
		<level value="debug" />
		<appender-ref ref="log-console-stdout" />
	</logger>
	<logger name="com.hzcominfo.dataggr.migrate" additivity="false">
	<!--com.hzcominfo.dataggr.migrate.subject.SubjectFromHbaseKafka-->
		<level value="debug" />
		<appender-ref ref="log-console-stdout" />
	</logger>
	<logger name="A.Statistic" additivity="false">
		<level value="trace" />
		<appender-ref ref="log-console-stdout" />
	</logger>
	<root>
		<level value="warn" />
		<appender-ref ref="log-console-stdout" />
	</root>
</log4j:configuration>
